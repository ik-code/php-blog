{% extends 'base.twig' %}

{% block body %}

        {% if post.image_path is not null %}
            <img src="{{ asset_url(post.image_path) }}" class="img-fluid" alt="{{ post.title|escape }}">
        {% endif %}
        <h1 class="my-3">{{ post.title|escape }}</h1>
        <div class="container mb-3">
            <div class="row">
                <span class="text-muted">Ihor Khaletskyi | {{ post.publishedd_date|date("F d, Y") }}</span>
            </div>
        </div>
        <div>
            {{ post.content|raw }}
        </div>

{% endblock %}